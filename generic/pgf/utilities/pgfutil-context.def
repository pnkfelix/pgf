       {\@tempa\space undefined}%
    \else
      \ifx\pgfutil@empty#3\pgfutil@empty
        \KV@default
      \else
        \KV@@sp@def\@tempb{#2}%
        \expandafter\@tempc\expandafter{\@tempb}\relax
      \fi
    \fi
  \fi}
\def\KV@default{%
